datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password_hash String
  properties    Property[]
}

model Property {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  ownerId   Int
  owner     User     @relation(fields: [ownerId], references: [id])
  rooms     Room[]
}

model Room {
  id          Int           @id @default(autoincrement())
  propertyId  Int
  name        String
  type        String
  capacity    Int
  baseRate    Float
  property    Property      @relation(fields: [propertyId], references: [id])
  reservations Reservation[]
  housekeepingTasks HousekeepingTask[]
}

model Reservation {
  id         Int      @id @default(autoincrement())
  roomId     Int
  guestName  String
  guestEmail String?
  checkIn    DateTime
  checkOut   DateTime
  status     String
  channel    String?
  totalPrice Float?
  room       Room     @relation(fields: [roomId], references: [id])
}

model ChannelSync {
  id         Int      @id @default(autoincrement())
  channel    String
  lastSync   DateTime @default(now())
  status     String
  details    String?
}

model HousekeepingTask {
  id               Int      @id @default(autoincrement())
  roomId           Int
  description      String
  dueDate          DateTime
  status           String   @default("pending")
  room             Room     @relation(fields: [roomId], references: [id])
}